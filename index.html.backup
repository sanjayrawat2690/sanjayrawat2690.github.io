            <button class="carousel-button next" id="carousel-next">&#10095;</button>
            <div class="carousel-indicators" id="carousel-indicators">
                <!-- Indicators will be added via JavaScript -->
            </div>
        </div>
    </div>
    
    <div class="container">
        <main>
            <section class="intro-section">
                <p>A collection of devotional lyrics for Hindu deities</p>
            </section>
            
            <!-- Search Results Section -->
            <section id="main-search-results" style="display: none;">
                <h2 class="section-title">Search Results</h2>
                <p id="search-info"></p>
                <button id="clear-search-btn" class="clear-search-btn" style="display: none;">Clear Search</button>
                <div id="search-results-grid" class="deity-grid">
                    <!-- Search results will be populated here -->
                </div>
            </section>
            
            <section class="deities-section">
                <h2 class="section-title">Explore Devotional Aartis</h2>
                <div class="deity-grid" id="deity-grid">
                    <!-- Deity cards will be populated here via JavaScript -->
                </div>
            </section>
        </main>
    </div>
    
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Aarti Sangrah</h3>
                <p>A digital collection of traditional Hindu devotional hymns</p>
            </div>
            
            <div class="footer-section">
