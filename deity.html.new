<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirecting...</title>
    <script>
        // Get the deity ID from the URL
        const urlParams = new URLSearchParams(window.location.search);
        const deityId = urlParams.get('id');
        const aartiId = urlParams.get('aarti');
        
        if (deityId) {
            // Build the new URL format
            let newUrl = `/${deityId}`;
            if (aartiId) {
                newUrl += `?aarti=${aartiId}`;
            }
            
            // Redirect to the new URL
            window.location.href = newUrl;
        } else {
            // If no deity ID, redirect to homepage
            window.location.href = '/';
        }
    </script>
    <meta http-equiv="refresh" content="1;url=/" />
</head>
<body>
    <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 100px auto; text-align: center; line-height: 1.6;">
        <h2>Redirecting to new URL format...</h2>
        <p>We have updated our website to use cleaner URLs. You are being redirected to the new address.</p>
        <p>If you are not redirected automatically, please <a href="/" id="redirect-link">click here</a>.</p>
        <script>
            // Update the link href as well
            if (deityId) {
                let newUrl = `/${deityId}`;
                if (aartiId) {
                    newUrl += `?aarti=${aartiId}`;
                }
                document.getElementById('redirect-link').href = newUrl;
            }
        </script>
    </div>
</body>
</html> 